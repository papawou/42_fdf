{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "launch_debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/fdf",
			"args": [
				"./42.fdf"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Attach to valgrind",
					"text": "target remote | /usr/bin/vgdb",
					"ignoreFailures": true  
				}
			],
			"preLaunchTask": "make_debug"
		}
	]
}