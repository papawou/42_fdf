{
  "tasks": [
    {
      "type": "shell",
      "label": "make_debug",
      "command": "make",
      "args": [
				"DEBUG=1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "make re with DEBUG=1"
    },
		{
      "type": "shell",
      "label": "valgrind_debug",
      "command": "valgrind",
      "args": [
				"--vgdb=yes", "--vgdb-error=0", "--leak-check=full", "--show-leak-kinds=all", "--track-origins=yes",
				""
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "valgrind vgdb",
			"dependsOn": ["make_debug"],
			"dependsOrder": "sequence"
    }
  ],
  "version": "2.0.0"
}

